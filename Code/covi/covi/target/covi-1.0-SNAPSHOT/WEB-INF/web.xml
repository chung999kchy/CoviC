    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
        <jsp-property-group>
            <description>JSP configuration for the system </description>
            <url-pattern>/index.jsp</url-pattern>
            <url-pattern>/login.jsp</url-pattern>
            <url-pattern>/register.jsp</url-pattern>
            <url-pattern>/myaccount/checkAccount.jsp</url-pattern>
            <url-pattern>/myaccount/accountDetail.jsp</url-pattern>
            <url-pattern>/myaccount/ChangePassword.jsp</url-pattern>
            <url-pattern>/history.jsp</url-pattern>
